{% block body %}
	<div class="container" width="30">
		<div class='row flex'>
			{% for supplement in supplements %}
				<div class='col-3'>
					<div class='card'>
						<div class='card-body'>


							<div class="card-image">
								{% for img in supplement.imgs %}
									<img src="{{ asset('/uploads/' ~ img.nom)|imagine_filter('square')}}" alt="Image" width="150"/>
								{% endfor %}
							</div>

							<div class="card-header">
								<strong>{{ supplement.nom }}</strong>
							</div>
							<div class="divider"></div>
							<div class="card-content">
								<strong>
									{{supplement.prix}}DT</strong>
								<a href="{{path('panier_add',{'id':supplement.id})}}" class="btn btn-primary float-right">
									<i class="fas fa-shopping-cart mr-1"></i>
									Ajouter
								</a>
							</div>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>


		<script src="https://cdn.jsdelivr.net/npm/axentix@1.2.1/dist/js/axentix.min.js"></script>
		<!-- JavaScript Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
	{% endblock %}
