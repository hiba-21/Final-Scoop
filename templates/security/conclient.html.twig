<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="stylesheet" href="/css/order.css">
		<link rel="stylesheet" href="/css/conclient.css">
	</head>
	<body>
		<div class="home">
			<nav class="nav">
				<div class="logo">
					<a href="/appClient">
						<img src="img/scoop.png" class="logoImg"/>
					</a>
				</div>
				<div class="item">
					<div>
						<a href="appClient">
							Accueil
						</a>
					</div>
					<div>
						<a href="/produit">
							Menu
						</a>
					</div>
					<div>
						<a href="/panier">
							<img src="/img/Shopping Cart.png" class="ShoppingCart"/>
						</a>
					</div>
					<div>
						<a href="/conclient">
							<button class="loginBtn navBtn">Connexion</button>
						</a>
					</div>
					<div>
						<a href="/insclient">
							<button class="signUpBtn navBtn">S'inscrire</button>
						</a>
					</div>
					<div>
						<a href="/etat">
							<button class="signUpBtn navBtn">L'etat</button>
						</a>
					</div>
				</div>
			</nav>

			{% block body %}

				<div class="fromContainer">
					<div class="fromContainer_First">
						<div class="logPicture">
							<img src="/img/Group 7.svg"/>
						</div>
					</div>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}
						<div id="login-box">
							<div id="name">
								<div class="main">
									<h1 class="h3 mb-3 font-weight-normal">Connecter!</h1>
									<label for="inputEmail">Email</label>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
									<label for="inputPassword">Mot de passe</label>
									<input type="password" name="password" id="inputPassword" class="form-control" required>

									<input
									type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

									{#
																																																																											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																											        See https://symfony.com/doc/current/security/remember_me.html
																																																																											
																																																																											        <div class="checkbox mb-3">
																																																																											            <label>
																																																																											                <input type="checkbox" name="_remember_me"> Remember me
																																																																											            </label>
																																																																											        </div>
																																																																											    #}

									<button class="btn btn-lg btn-primary" type="submit">
										Connecter
									</button>

								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</body>
	{% endblock %}
</html>
